# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{h,hpp,c,cpp}]
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.{json,js}]
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
